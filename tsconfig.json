{
  "compilerOptions": {
    "target": "esnext",                          // modern JS output
    "useDefineForClassFields": true,             // required for Vue
    "module": "esnext",                          // modern module system
    "moduleResolution": "node",
    "strict": true,                              // enable strict type-checking
    "jsx": "preserve",                           // keep JSX for Vue
    "isolatedModules": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "allowJs": true,                             // if you still have some .js files
    "checkJs": false,                            // don’t type-check plain JS
    "noEmit": true,                              // don’t output compiled TS files
    "lib": ["esnext", "dom"],                    // includes Map, Set, Promise, DOM APIs
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"] ,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
    // Vite types
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": ["node_modules", "dist"]
}
